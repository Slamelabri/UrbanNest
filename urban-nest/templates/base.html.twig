        <link rel="stylesheet" href="/assets/css/main.css">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body id="{% block pageid %}{% endblock %}">
        <nav>
            {# Logo #}
            <div>
                <h1>
                    <a href="/">
