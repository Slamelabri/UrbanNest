                                    <path d="M4.61 19.4199L7.64 16.3799" stroke="#292D32" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </div>
                            <p><b>Signer</b> et faites vos cartons</p>
                        </li>
                    </ul>
                </div>
                <div>
                    <a href="{{ path('app_announcements_filter') }}" class="btn btn-blue">Nos Offres</a>
                </div>
            </div>
        </section>
        <!--end::Section Offers-->
        <!--begin::Section Announces-->
        <section id="homepage-sec-announces">
            <!--begin::Separator-->
            <div class="hsa-separator-top">
                <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
